<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/front_messages_row"
        >

        <com.daimajia.swipe.SwipeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_messages_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:tag="Bottom4"
                android:id="@+id/bottom_wrapper_2_messages_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/delete_imview_messages_row"
                    android:src="@drawable/ic_action_discard"
                    android:layout_width="70dp"
                    android:background="@color/button_red"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/profilePic_messages_row"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/default_user_icon"
                    />

                <TextView
                    android:id="@+id/username_messages_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_blue"
                    android:text="Title"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </com.daimajia.swipe.SwipeLayout>
    </RelativeLayout>

</FrameLayout>