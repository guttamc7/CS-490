<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomegrad"
    android:scaleType="fitStart"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/text2"
        android:clickable="false"
        android:text="Create an Account"
        android:textColor="#eaeff3"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/register_reg_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif_light"
        android:layout_marginTop="15dp"
        android:textColor="#eaeff3"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Register now with a .edu account"
        android:textSize = "20dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@drawable/textlines"
        android:id="@+id/txtFullName"
        android:layout_marginTop="35dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:hint="Full Name"
        android:gravity="center"
        android:textColorHint="#eaeff3"
        android:textColor="#eaeff3"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_action_user_white"
        />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:background="#15000000"
            android:layout_above="@+id/txtEmail"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/txtEmail"
        android:layout_gravity="center"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:hint="Email"
        android:textColorHint="#eaeff3"
        android:gravity="center"
        android:background="@drawable/textlines"
        android:inputType="textEmailAddress"
        android:textColor="#eaeff3"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_action_mail"
        />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:background="#15000000"
            android:layout_above="@+id/register_pass"/>

        <EditText android:id="@+id/register_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:inputType="textPassword"
            android:gravity="center"
            android:singleLine="true"
            android:textColorHint="#eaeff3"
            android:textColor="#eaeff3"
            android:textSize="20sp"
            android:background="@drawable/textlines"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_action_lock_closed"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegisterUser"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:background="@drawable/roundedbutton"
        android:textColor="#eaeff3"
        android:textSize="21sp"
        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/already_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif_light"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="#eaeff3"
            android:layout_gravity="center"
            android:text="Already have an account?"
            android:textSize = "16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:layout_toRightOf="@id/already_acc"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:textColor="#eaeff3"
            android:textSize="16dp"
            />
        </RelativeLayout>


    </LinearLayout>





</LinearLayout>