<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="220dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:id="@+id/front_findNearby"
    android:background="@drawable/bg_card">

        <TextView
            android:id="@+id/grid_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor = "@color/primary_white"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:maxLength="20"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/grid_profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_action_user_white"
        android:background="@null"
        app:border_color="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@id/grid_UserName"
        app:border_width="2dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/grid_UserDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Within 2 miles "
                android:gravity="center"
                android:textColor = "@color/primary_white"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/grid_profile_image"
                android:layout_alignRight="@+id/grid_profile_image"
                android:layout_alignEnd="@+id/grid_profile_image">
            </TextView>
            <TextView
                android:id="@+id/grid_UserActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:textColor = "@color/primary_white"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_below="@+id/grid_UserDistance"
                android:layout_centerHorizontal="true">
            </TextView>


</RelativeLayout>
</FrameLayout>