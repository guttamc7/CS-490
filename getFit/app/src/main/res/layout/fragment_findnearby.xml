<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/findnearby_frag"
    android:background="#D6D6D4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tap_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif_light"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#22313F"
            android:layout_gravity="center"
            android:text="Tap Below to Find a Gym8.."
            android:textSize = "20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="103dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="com.example.gurumukh.getfit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_ripple"
            app:rb_color="#F62459"
            app:rb_radius="24dp"
            app:rb_rippleAmount="4"
            app:rb_duration="4000"
            app:rb_scale="6">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgViewfindNearby"
        android:layout_centerInParent = "true"
        />
       </com.skyfishjy.library.RippleBackground>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/discovery_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"/>

    </RelativeLayout>
</FrameLayout>