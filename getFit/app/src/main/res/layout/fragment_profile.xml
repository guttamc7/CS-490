<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeff3"
    android:scaleType="fitStart"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitStart"
        android:orientation="vertical"
        android:background="@drawable/ic_background">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:onClick="showDialog"
            android:layout_gravity="right"
            android:contentDescription="Edit Your Profile"
            android:src="@drawable/ic_action_edit" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/ProfilePic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_user_icon"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#eaeff3"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Gurumukh Uttamchandani"
        android:textSize = "18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
               >

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_alignParentLeft="true"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textColor="#eaeff3"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/stroke"
            android:text="178 cm"
            android:textSize = "17dp" />


        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id = "@+id/stroke"
            android:background="#eaeff3"
            android:padding="5dp" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_toRightOf="@id/stroke"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:textColor="#eaeff3"
                android:layout_gravity="center"
                android:text="160 lbs"
                android:textSize = "17dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>