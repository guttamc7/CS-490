<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white">

    <TextView
        android:id="@+id/workout_information_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/text_black"
        android:layout_gravity="center"
        android:text="Workout Information"
        android:textSize = "22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:background="#15000000"
        android:id="@+id/stroke_workout_information"
        android:layout_below="@id/workout_information_text"
        />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workout_name"
        android:layout_gravity="center"
        android:inputType="text"
        android:hint="@string/workout_name"
        android:textColor="@color/text_black"
        android:textColorHint="#808080"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_below="@+id/stroke_workout_information"
        android:background="@drawable/textlines"
        android:gravity="center"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workout_description"
        android:layout_gravity="center"
        android:hint="@string/workout_descr"
        android:lines="2"
        android:maxLines="4"
        android:inputType="textMultiLine"
        android:textColor="@color/text_black"
        android:textColorHint="#808080"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_below="@+id/workout_name"
        android:background="@drawable/textlines"
        android:gravity="center"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Workout Level : "
        android:textColor="@color/text_black"
        android:layout_marginTop="25dp"
        android:id="@+id/workoutlev"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/workout_description"
        android:textSize="16sp"
        android:padding="10dp"
        />



    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/levelButtons"
    android:layout_below="@+id/workoutlev"
    >
        <ImageButton
            android:id="@+id/level1Button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_level1"
            android:padding="10dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/level2Button"
            android:layout_toStartOf="@+id/level2Button" />
        <ImageButton
            android:id="@+id/level2Button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_level2"
            android:padding="10dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:id="@+id/level3Button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_level3"
            android:padding="10dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/level2Button"
            android:layout_toEndOf="@+id/level2Button" />

    </RelativeLayout>

    <Switch
        android:id="@+id/visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/levelButtons"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/text_black"
        android:textOff="Only Me"
        android:textOn="To All"
        android:textSize="16sp"
        android:padding="10dp"
        android:text="Visiblility" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/createworkoutinfo_footer"
        android:layout_alignParentBottom="true"

        >
        <Button
            android:id="@+id/createWorkout_nextButton"
            android:background="@drawable/round_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Next"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:textColor="#6C7A89"
            android:layout_alignParentTop="true">
        </Button>
    </RelativeLayout>







</RelativeLayout>